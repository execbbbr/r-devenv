{
	"image": "ghcr.io/rocker-org/devcontainer/r-ver:4.2",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "make,gcc,g++"
		},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"additionalRepositories": "rhub = 'https://r-hub.r-universe.dev', jeroen = 'https://jeroen.r-universe.dev'",
			"packages": "dplyr,tidyr,readr,lubridate,BiocManager,biomaRt,Seurat,patchwork,scRepertoire,ChAMP,minfi,methylationArrayAnalysis,wateRmelon,IRkernel,abind,affxparser,affy,affycoretools,affyio,affyPLM,annotate,AnnotationDbi,AnnotationFilter,AnnotationForge,ape,aplot,arrow,assertthat,AUCell,base,beachmat,BH,Biobase,BiocFileCache,BiocGenerics,BiocIO,BiocNeighbors,BiocParallel,BiocSingular,BiocVersion,biovizBase,bit,bit64,bitops,blob,broom,broom.helpers,BSgenome,bsseq,Category,caTools,cellranger,checkmate,CLL,colorspace,compiler,conflicted,cowplot,cpp11,crosstalk,ctv"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installJupyterlab": true
		}
	},
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},
	"postCreateCommand": "npm install -g @devcontainers/cli && R -e \"IRkernel::installspec()\"",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"EditorConfig.EditorConfig",
				"ms-vscode.makefile-tools",
				"redhat.vscode-yaml",
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}
